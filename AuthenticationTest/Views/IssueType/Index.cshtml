@model IEnumerable<IssueType>
@{
    ViewData["Title"] = "Issue Types";
}

<h2>Issue Types</h2>
<a asp-action="Create" class="btn btn-primary">Create New Issue Type</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Fields</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issueType in Model)
        {
            <tr>
                <td>@issueType.Name</td>
                <td>
                    <ul>
                        @foreach (var field in issueType.IssueTypeFields)
                        {
                            <li>@field.FieldName (@field.FieldType)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@issueType.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" method="post" asp-route-id="@issueType.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
