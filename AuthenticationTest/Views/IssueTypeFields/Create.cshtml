@model AuthenticationTest.Models.IssueTypeField

<h2>Create Issue Type Field</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Field Name</label>
        <input type="text" class="form-control" asp-for="FieldName" required />
        <span asp-validation-for="FieldName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Field Type</label>
        <select class="form-control" asp-for="FieldType" required>
            <option value="Text">Text</option>
            <option value="DateTime">DateTime</option>
            <option value="Attachment">Attachment</option>
        </select>
        <span asp-validation-for="FieldType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Issue Type</label>
        <select class="form-control" asp-for="IssueTypeId" asp-items="ViewBag.IssueTypes" required>
            <option value="">-- Select Issue Type --</option>
        </select>
        <span asp-validation-for="IssueTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Field</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
