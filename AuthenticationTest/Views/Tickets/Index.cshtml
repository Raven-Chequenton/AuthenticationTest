@model IEnumerable<AuthenticationTest.Models.Ticket>

@{
    ViewData["Title"] = "All Tickets";
}

<h2>All Tickets</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ticket Ref</th>
            <th>Requestor</th> <!-- ✅ Added RequestorUsername -->
            <th>Short Description</th>
            <th>Company</th>
            <th>Issue Type</th>
            <th>Circuit ID</th>
            <th>Site Name</th>
            <th>VLAN</th>
            <th>Status</th>
            <th>Created On</th>
            <th>Updated On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketRef</td>
                <td>@(ticket.RequestorUsername ?? "N/A")</td> <!-- ✅ Displaying Requestor -->
                <td>@ticket.ShortDescription</td>
                <td>@(ticket.Company?.Name ?? "N/A")</td>
                <td>@(ticket.IssueType?.Name ?? "N/A")</td>
                <td>@(ticket.Circuit?.CircuitID ?? "N/A")</td>
                <td>@(ticket.Circuit?.SiteName ?? "N/A")</td>
                <td>@(ticket.Circuit?.VLAN ?? "N/A")</td>
                <td>@ticket.Status</td>
                <td>@ticket.CreatedOn.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(ticket.UpdatedOn?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
